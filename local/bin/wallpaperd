#!/usr/bin/env sh

echo "starting up wallpaper manager for desktop"
swww-daemon &
echo "starting up wallpaper manager for overview"
swww-daemon -n overview &

if [ -e ~/.config/background ]; then
  echo "setting wallpaper for desktop"
  swww img ~/.config/background
fi
if [ -e ~/.config/background_overview ]; then
  echo "setting wallpaper for overview"
  swww img -n overview ~/.config/background_overview
fi
wait
