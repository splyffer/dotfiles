[Unit]
Description=A deamon that manages desktop and overview wallpaper on niri
PartOf=graphical-session.target
After=niri.service
Requisite=graphical-session.target

[Service]
ExecStart=/home/carluad/.local/bin/wallpaperd
ExecReload=kill -SIGUSR2 $MAINPID
Restart=on-failure

[Install]
WantedBy=graphical-session.target
